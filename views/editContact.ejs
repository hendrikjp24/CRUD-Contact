<div class="container mt-3">
  <div class="row">
    <div class="col-md-4">
      <h3>Edit Contact</h3>

      <% if (typeof errors != "undefined") { %>
      <div class="alert alert-danger mt-3" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="id" value="<%= (detailContact._id) ? detailContact._id : detailContact.id %>" />
        <input type="hidden" name="oldName" value="<%= (detailContact.oldName) ? detailContact.oldName : detailContact.nama %>" />
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Nama</label>
          <input type="text" class="form-control" name="nama" value="<%= detailContact.nama %>" id="exampleInputEmail1" />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" value="<%= detailContact.email %>" id="exampleInputPassword1" />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">No Hp</label>
          <input type="text" class="form-control" name="nohp" id="exampleInputPassword1" value="<%= detailContact.nohp %>" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
